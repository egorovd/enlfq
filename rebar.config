{pre_hooks, [{"(linux|darwin)", compile, "make V=0 -C c_src -j 2"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make -C c_src clean"}]}.

{require_min_otp_vsn, "R19.*"}.

{erl_opts, [
  no_debug_info,
  report,
  verbose,
  warn_deprecated_function,
  warn_deprecated_type,
  warn_export_all,
  warn_export_vars,
  warn_obsolete_guard,
  warn_untyped_record,
  warn_unused_import
]}.


